@using TaskManager.Srv.Components.Forms

<MudMessageBox>
    <MessageContent>
        <MudText Typo="Typo.h6">Új feladat</MudText>
        <CreateTaskForm OnValidate="@((isValid) => OnValidate(isValid))" taskViewModel="@taskViewModel" />
    </MessageContent>
    <CancelButton>
        <MudButton class="task-close-button" Variant="Variant.Filled" Color="Color.Error" OnClick="Cancel">Mégse</MudButton>
    </CancelButton>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@DisableSubmit" OnClick="CreateTask">Kész</MudButton>
    </YesButton>
</MudMessageBox>