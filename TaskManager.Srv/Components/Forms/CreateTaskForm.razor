<MudForm Model="@taskViewModel" Validation="@FieldValidator" @bind-Errors="_errors">
    <MudTextField class="new-task-text" Label="Név" For="(() => taskViewModel.Name)" @bind-Value="taskViewModel.Name" OnlyValidateIfDirty="true" Immediate="true" />
    <MudChipSet Filter="true" Mandatory="true" @bind-SelectedChip="selectedChip">
        <MudText>Prioritás</MudText>
        <MudChip Text="1" SelectedColor="Color.Success" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => checkedIcon(1))"></MudChip>
        <MudChip Text="2" SelectedColor="Color.Success" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => checkedIcon(2))"></MudChip>
        <MudChip Text="3" SelectedColor="Color.Success" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => checkedIcon(3))"></MudChip>
        <MudChip Text="4" SelectedColor="Color.Success" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => checkedIcon(4))"></MudChip>
        <MudChip Default="true" Text="5" SelectedColor="Color.Success" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => checkedIcon(5))"></MudChip>
    </MudChipSet>
</MudForm>